{
    "require": {
        "symfony/http-foundation": "^7.3",
        "symfony/dotenv": "^7.3",
        "ext-pdo": "*",
        "ext-ctype": "*"
    },
    "autoload": { "psr-4": { "App\\": "src/" } },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0",
        "friendsofphp/php-cs-fixer": "^3.89",
        "php-parallel-lint/php-parallel-lint": "^1.4"
    },
    "scripts": {
        "lint": [
            "parallel-lint --exclude vendor --exclude var --exclude cache .",
            "phpcs"
        ],
        "fix": [
            "php-cs-fixer fix --using-cache=yes --config=.php-cs-fixer.php --verbose"
        ],
        "cs": [
            "@lint"
        ]
    }
}
